            <DataTrigger Binding="{Binding HasPattern}" Value="True">
                <Setter TargetName="textBox" Property="Pattern" Value="{Binding Pattern}" />
                <Setter TargetName="textBox" Property="CaseSensitive" Value="{Binding CaseSensitive}" />
            </DataTrigger>
